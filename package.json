{
  "name": "fastify-typescript-template",
  "version": "1.0.0",
  "description": "NodeJS boilerplate using fastify & typeScript",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node dist",
    "build": "rimraf dist && tsc --build --verbose",
    "dev": "nodemon",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "test": "vitest",
    "test:watch": "vitest -w",
    "copy": "cp package.json dist/ && cp .nvmrc dist/"
  },
  "keywords": [],
  "author": "Farid Nizam",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@swc/core": "^1.3.64",
    "@swc/helpers": "^0.5.1",
    "@types/node": "^20.3.1",
    "@types/prettier": "^2.7.3",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "vitest": "^0.32.2",
    "youch": "^3.2.3"
  },
  "dependencies": {
    "@fastify/under-pressure": "^8.2.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.18.0"
  }
}
